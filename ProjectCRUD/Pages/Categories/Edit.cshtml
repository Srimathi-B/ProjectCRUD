@page "{id}"
@model ProjectCRUD.Pages.Categories.EditModel
@{
}
<h4>Edit Category</h4>
<form method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
   <div class="form-group">
        <label asp-for="@Model.CategoryName"></label>
        <input asp-for="@Model.CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success ms-3">Edit Category</button>
        <a href="/Categories/List" class="col btn btn-default border-secondary ms-3" role="button">Cancel</a>
    </div>
</form>
