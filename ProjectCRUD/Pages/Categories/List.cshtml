@page
@model ProjectCRUD.Pages.Categories.ListModel
@{
}
<form method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
    <br />
    <div class="row">
        <div class="col-sm-10"><h5>List all Categories</h5></div>
         <div class="col-sm-2">
            <a href="/Categories/Add" class="btn btn-success rounded-pill" role="button">ADD
                
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="input-group">
                <input class="form-control border rounded-pill"
                       type="search" placeholder="type search text" id="example-search-input"
                       asp-for="@Model.SearchText">
                <span class="input-group-append">
                    <button class="btn btn-outline-primary bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Search">
                        <i class="fa fa-search"></i>
                    </button>
                    <button class="btn btn-outline-dark bg-white border rounded-pill ms-n5"
                            type="submit" asp-page-handler="Clear">
                        <i class="fa fa-remove"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <br />

<table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">CategoryName</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Catgs == null || Model.Catgs.Count <= 0)
            {
                <tr>
                    <td>No Category Found</td>
                </tr>
            }
            else
            {
            @foreach (var d in Model.Catgs)
            {
                <tr>
                    <td>@d.Id</td>
                    <td>@d.CategoryName</td>
                    <td>
                        <a href="/Categories/Edit/@d.Id" class="btn btn-outline-warning" role="button">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    
                </tr>
                }
            }
        </tbody>
    </table>
    </form>