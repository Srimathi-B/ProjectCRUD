@page 
@model ProjectCRUD.Pages.Users.DownloadModel
@{
}
<h3>Download Status</h3>
<form method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
   <div class="form-group">
        <label asp-for="@Model.DownloadCount"></label>
        <input type="number" asp-for="@Model.DownloadCount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.SelectedId"></label>
        <select asp-for="@Model.SelectedId" asp-items="@Model.BookNameList" class="form-select"></select>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <a href="/Users/Download" class="col btn btn-default border-secondary ms-3" role="button">Download</a>
        <a href="/Users/ListBook" class="col btn btn-default border-secondary ms-3" role="button">Back</a>
    </div>
</form>