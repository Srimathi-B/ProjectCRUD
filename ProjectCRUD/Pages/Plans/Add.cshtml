@page
@model ProjectCRUD.Pages.Plans.AddModel
@{
}
<h4>Add New Plan</h4>
<form method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
   <div class="form-group">
        <label asp-for="@Model.Plan_Validity"></label>
        <input asp-for="@Model.Plan_Validity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Amount"></label>
        <input asp-for="@Model.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <div class="row gx-0">
        <button type="submit" class="col btn btn-success ms-3">Add Plan</button>
        <a href="/Plans/List" class="col btn btn-default border-secondary ms-3" role="button">Cancel</a>
    </div>
</form>