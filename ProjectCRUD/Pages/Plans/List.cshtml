@page
@model ProjectCRUD.Pages.Plans.ListModel
@{
}
<form method="post" class="shadow-lg p-3 mb-5 bg-white rounded">
    <br />
    <div class="row">
        <div class="col-sm-10"><h5>List all Plans</h5></div>
         <div class="col-sm-2">
            <a href="/Plans/Add" class="btn btn-success rounded-pill" role="button">ADD
                
            </a>
        </div>
    </div>
    <div class="form-group">
        <h6 class="text-success">@Model.SuccessMessage</h6>
        <h6 class="text-danger">@Model.ErrorMessage</h6>
        <h6 class="text-danger">@Html.ValidationSummary()</h6>
    </div>
    <br />

<table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Plan_Validity</th>
                <th scope="col">Amount</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Plans == null || Model.Plans.Count <= 0)
            {
                <tr>
                    <td>No Plan Found</td>
                </tr>
            }
            else
            {
            @foreach (var d in Model.Plans)
            {
                <tr>
                    <td>@d.Id</td>
                    <td>@d.Plan_Validity</td>
                    <td>@d.Amount</td>
                    <td>
                        <a href="/Plans/Edit/@d.Id" class="btn btn-outline-warning" role="button">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    
                </tr>
                }
            }
        </tbody>
    </table>
    </form>
